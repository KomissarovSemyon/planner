<div class="p-10 bg-white border border-gray-light rounded">
  <%= form_with(model: meeting, local: true, class: "meeting-form") do |form| %>
    <% if meeting.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(meeting.errors.count, "error") %> <%= t(:error_meeting_save) %></h2>
        <ul>
        <% meeting.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <h3 class="mb-4"><%= t(:meeting_info) %></h3>

    <div class="mb-6">
      <%= form.label :name, class: "label" %>
      <%= form.text_field :name, class: "input" %>
    </div>

    <div class="mb-6">
      <%= form.label :start_time, class: "label" %>
      <div class="flex items-center justify-between max-w-md">
        <%= form.datetime_select :start_time, { start_day: Date.today, start_year: Date.today.year, minute_step: 15 }, { class: "select py-2 px-2 mr-2" } %>
      </div>
    </div>

    <div class="field">
      <%= form.label :end_time, class: "label" %>
      <div class="flex items-center justify-between max-w-md">
        <%= form.datetime_select :end_time, { start_day: Date.today, start_year: Date.today.year, minute_step: 15 }, { class: "select py-2 px-2 mr-2" } %>
      </div>
    </div>

    <%= form.submit class: "btn btn-primary text-base py-3 px-5 mt-5" %>
  
  <% end %>
</div>
